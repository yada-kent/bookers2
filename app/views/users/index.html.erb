

<div class="container">
  <div class="row">
     <div class="col-md-3">
<%= render 'userinfo', user: current_user %>
<%= render 'books/list', book: @book %>
     </div>
<!-- ユーザー一覧 -->
 <div class="col-md-8 offset-md-1">
   <h2>Users</h2>

<table class="table table-hover table-inverse">
        <thead>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </thead>
        <tbody>
         <% @users.each do |user| %>
          <tr>
            <th>
            <%= image_tag user.get_profile_image(100,100) %>
            <th>
             <%= user.name %>
            </th>
            <th>
              <%= link_to 'Show', user_path(user.id) %>
            </th>
          </tr>
          <% end %>
        </tbody>
      </table>


</div>
</div>
</div>