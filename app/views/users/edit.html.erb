<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h2>User info</h2>
  		<%= form_with model: @user do |f| %>
    		<div class="form-group">
       　　<label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"Name", class:"form-control name"%></br>
          <label for="inputImage">Image</label></br>
          <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*", class:"form-control-file user_image" %></br>
          <label for="inputIntroduction">Introduction</label></br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"Introduction", class:"form-control introduction"%></br>
          <%= f.submit "Update User", class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

